<Page x:Class="PCGaurdianV1.startup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PCGaurdianV1"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="500"
      Title="startup">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" Height="62" Margin="0,0,0,0" TextWrapping="Wrap" Text="Login as:" FontSize="36" TextAlignment="Center" Width="306"/>
            <Button x:Name="admin" Content="Admin" HorizontalAlignment="Left" FontSize="20" Height="41" Margin="0,10,0,0" VerticalAlignment="Top" Width="306" Click="admin_Click"/>
            <Button Name="otherUser" Content="Other User" HorizontalAlignment="Left" FontSize="20" Height="41" Margin="0,10,0,0" VerticalAlignment="Top" Width="306" Click="otherUser_Click"/>
            <Button Name="guest" Content="Guest" HorizontalAlignment="Left" FontSize="20" Height="41" Margin="0,10,0,0" VerticalAlignment="Top" Width="306" Click="guest_Click"></Button>
        </StackPanel>
    </Grid>
</Page>